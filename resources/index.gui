<svg> 
  <defs>
    <symbol id="line">
      <line x1="$-45%" y1="$" x2="$" y2="$" fill="white" stroke-width="1%-1"/>
    </symbol>
    <symbol id="clockhours">
      <g id="hours" transform="translate(50%, 95%)">
        <circle cx="$-45%" cy="$" r="15" fill="red"/>
        <g transform=" translate(-43%-1, 3%+1) rotate(-90)">
          <text id="texthours" x="$+10" y="$+1" fill="white" font-size="20" font-weight="bold" text-length="2" text-anchor="middle"/>
        </g>
        <animateTransform attributeType="rotate"/>
      </g>
    </symbol>
    <symbol id="clockminutes">
      <g id="minutes" transform="translate(50%, 95%)">
        <circle id="cb" cx="$" cy="$-106" r="10" fill="yellow"/>
        <text id="textminutes" x="$-10" y="$-5" fill="black" font-size="15" font-weight="bold" text-length="2" text-anchor="middle"/>
        <animateTransform attributeType="translate"/>
      </g>
    </symbol>
    <symbol id="battery">
      <rect x="5" y="5" width="35%" height="6%" fill="lightgray"/>
      <rect x="8" y="8" width="33%+1" height="4%" fill="black"/>
      <rect id="magiclevel" x="8" y="8" width="33%+1" height="4%" fill="green"/>
    </symbol>
  </defs>
  <svg width="100%" height="100%">
    <image href="hr-clock-town-clock.png"/> 
    <image href="heart-container.png" width="30" height="25" x="80%"/>
    <text id="hr" x="$+2" y="$-10"/>
    <arc x="5%" y="48%" width="90%" height="95%" arc-width="1%" start-angle="270" sweep-angle="180" fill="white"/>
    <g transform="translate(50%,95%) rotate(15)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(30)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(45)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(60)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(75)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(90)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(105)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(120)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(135)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(150)">
      <use href="#line" />
    </g>
    <g transform="translate(50%,95%) rotate(165)">
      <use href="#line" />
    </g>
    <line x1="5%+1" y1="95%" x2="95%-2" y2="95%" fill="white" stroke-width="1%-1"/>
    <use id="clockanimation" href="#clockhours"/>
    <g transform="translate(50%,75%), rotate(45)">
      <rect x="$-10%" y="$-10%" width="25%" height="25%" fill="green"/>
    </g>
    <use id="minuteshand" href="#clockminutes"/>
    <use id="magicbar" href="#battery"/> 
    <text id="day"/>
    <text x="$-20" y="$-5" font-size="23" fill="white" text-anchor="middle">day of</text>
    <text id="month" x="$-34" y="$-5"/>
  </svg>
</svg>